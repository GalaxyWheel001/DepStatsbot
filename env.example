# ==============================================
# Telegram Bot Configuration
# ==============================================
# Получите токен у @BotFather в Telegram
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Ваш Telegram ID (можно узнать у @userinfobot)
# Для нескольких админов: 123456789,987654321
ADMIN_IDS=8175691848

# ==============================================
# Database Configuration
# ==============================================
# SQLite (рекомендуется для начала)
DATABASE_URL=sqlite+aiosqlite:///./deposit_bot.db

# PostgreSQL (для production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/deposit_bot

# ==============================================
# File Storage
# ==============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_PER_MINUTE=1
MAX_APPLICATIONS_PER_DAY=3

# ==============================================
# Webhook Configuration (опционально)
# ==============================================
# Используйте только для production с доменом
# WEBHOOK_HOST=https://yourdomain.com
# WEBHOOK_PORT=8443
# WEBHOOK_PATH=/webhook

# ==============================================
# Payment Configuration (SmartGlocal)
# ==============================================
# Provider Token от SmartGlocal (через @BotFather)
# Можно также добавить через админ-панель бота
# PAYMENT_PROVIDER_TOKEN=your_provider_token_here

# Валюта платежей (USD, EUR, RUB и т.д.)
PAYMENT_CURRENCY=USD

# Комиссия (0 = без комиссии, 3.5 = 3.5%)
PAYMENT_COMMISSION_PERCENT=0
